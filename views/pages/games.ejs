<!DOCTYPE html>
<html lang="en" class="h-100">
    <head>
        <%- include('../partials/head'); %>
        <title>üéÅ Game Gifters | Games</title>

        <% scripts.forEach(function(script) { %>
        <script src="js/<%= script %>" async></script>
        <% }) %> <% if (games) { %>
        <script>
            let gameInfo = <%- JSON.stringify(games) %>;
        </script>
        <% } %>
    </head>

    <body class="d-flex h-100 text-center text-white bg-dark table-page">
        <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
            <%- include('../partials/header'); %>

            <main class="small-box table-page">
                <h2>Games</h2>

                <div class="dropdown">
                    <a
                        class="
                            btn
                            dropdown-button
                            fw-bold
                            border-white
                            bg-white
                            dropdown-toggle
                        "
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                    >
                        Select Action
                    </a>

                    <ul
                        class="dropdown-menu"
                        aria-labelledby="dropdownMenuLink"
                    >
                        <li>
                            <a
                                class="dropdown-item"
                                onclick="showModal('add-modal')"
                                >Add Game</a
                            >
                        </li>
                        <li>
                            <a
                                class="dropdown-item"
                                onclick="showModal('delete-modal')"
                                >Delete Games</a
                            >
                        </li>
                    </ul>
                </div>

                <div class="card text-dark bg-light mb-3">
                    <div class="card-header">Games / <strong>All</strong></div>

                    <div class="card-body">
                        <div class="data-desc">
                            <h5 class="card-title">üéÆ Game Database</h5>
                            <p style="font-size: 13px">
                                The following table records a library of up to
                                500 games curated for the employees to tailor
                                their wishlists, and allows you to add new game
                                titles.
                                <br />
                                <br />
                                Note: Steam Store API integration is currently a
                                WIP!
                            </p>
                        </div>

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">&#128465;</th>
                                    <th scope="col">&#x270E;</th>
                                    <th scope="col">AppID</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Price</th>
                                </tr>
                            </thead>
                            <tbody id="games-table-body">
                                <% games.forEach(function(game) { %>
                                <tr>
                                    <td>
                                        <input
                                            class="form-check-input"
                                            type="checkbox"
                                            name="delete-row"
                                            value="<%= game.app_id %>"
                                        />
                                    </td>
                                    <td>
                                        <a
                                            class="update"
                                            href="#"
                                            onclick="showModal('update-modal', <%= game.app_id %>, populateUpdateGameFields)"
                                            >&#128221;</a
                                        >
                                    </td>
                                    <td><%= game.app_id %></td>
                                    <td><%= game.title %></td>
                                    <td>$<%= game.price.toFixed(2) %></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>

            <%- include('../partials/footer'); %>
        </div>

        <!-- Pop-up Form Hidden, Source: https://www.w3schools.com/howto/howto_css_modals.asp -->

        <!-- Add Game Modal -->
        <div id="add-modal" class="modal">
            <div class="modal-content form-desc">
                <span class="close" onclick="closeModal('add-modal')"
                    >&times;</span
                ><br />

                <h2>New Game</h2>
                <p>Add a new game that can be wished for in the database.</p>
                <br />

                <form id="add-game-form">
                    <div class="row g-2">
                        <div class="form-floating col">
                            <input
                                type="text"
                                class="form-control"
                                name="app-id"
                                id="app-id"
                                placeholder="1145360"
                                autocomplete="off"
                                required
                            />
                            <label for="app-id">AppID</label>
                        </div>
                        <div class="form-floating col">
                            <input
                                type="text"
                                class="form-control"
                                name="title"
                                id="title"
                                placeholder="Hades"
                                autocomplete="off"
                                required
                            />
                            <label for="title">Game Title</label>
                        </div>
                        <div class="form-floating col">
                            <input
                                type="number"
                                min="0"
                                step="0.01"
                                class="form-control"
                                name="price"
                                id="price"
                                placeholder="24.99"
                                autocomplete="off"
                                required
                            />
                            <label for="price">Price (USD)</label>
                        </div>
                    </div>

                    <div class="col-auto" style="padding-top: 3em">
                        <button type="submit" class="btn btn-primary mb-3">
                            Add Game
                        </button>
                    </div>
                </form>
                <br />
            </div>
        </div>

        <!-- Update Game Modal -->
        <div id="update-modal" class="modal">
            <div class="modal-content form-desc">
                <span class="close" onclick="closeModal('update-modal')"
                    >&times;</span
                ><br />

                <h2>Update Game</h2>
                <p>Change information of an existing game in the database.</p>
                <br />

                <form id="update-game-form">
                    <div class="row g-2">
                        <div class="form-floating col">
                            <input
                                type="text"
                                class="form-control"
                                name="update-app-id"
                                id="update-app-id"
                                required
                            />
                            <label for="update-app-id">AppID</label>
                        </div>
                        <div class="form-floating col">
                            <input
                                type="text"
                                class="form-control"
                                name="update-title"
                                id="update-title"
                                required
                            />
                            <label for="update-title">Game Title</label>
                        </div>
                        <div class="form-floating col">
                            <input
                                type="number"
                                step="0.01"
                                class="form-control"
                                name="update-price"
                                id="update-price"
                                required
                            />
                            <label for="update-price">Price</label>
                        </div>
                    </div>

                    <div class="col-auto" style="padding-top: 3em">
                        <button type="submit" class="btn btn-primary mb-3">
                            Update Game
                        </button>
                    </div>
                </form>
                <br />
            </div>
        </div>

        <!-- Delete Game Modal -->
        <div id="delete-modal" class="modal">
            <div class="modal-content form-desc">
                <span class="close" onclick="closeModal('delete-modal')"
                    >&times;</span
                ><br />

                <h2>Remove Game</h2>
                <p>Are you sure you want to remove the selected Games?</p>
                <br />

                <form id="delete-game-form">
                    <div class="d-grid gap-2 d-md-block">
                        <button class="btn btn-outline-danger" type="submit">
                            Yes
                        </button>
                        <button
                            class="btn btn-outline-primary"
                            type="button"
                            onclick="closeModal('delete-modal')"
                        >
                            No
                        </button>
                    </div>
                </form>
                <br />
            </div>
        </div>
    </body>
</html>
